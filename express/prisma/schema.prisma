// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  userId   String @map("user_id")
  nickname String
  name     String
  email    String @unique @db.VarChar(50)
  password String
  major    String

  @@map(name: "users")
}
